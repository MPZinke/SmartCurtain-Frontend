{% extends "Header.j2" %}
{% block body %}
	{% from "Components/EventList.j2" import EventList %}
	{% from "Components/OptionList.j2" import OptionList %}

	<title>
		Home
	</title>

	<h3
	  style="padding:8px"
	>
		{{ area["name"] }}
	</h3>

	<div
	  class="accordion"
	  id="accordionExample"
	>
		{% if subareas is not none %}
			<div
			  class="accordion-item"
			>
				<h2
				  class="accordion-header"
				>
					<button
					  class="accordion-button"
					  type="button"
					  data-bs-toggle="collapse"
					  data-bs-target="#collapseOne"
					  aria-expanded="true"
					  aria-controls="collapseOne"
					>
						{{ area["name"] }}'s Rooms
					</button>
				</h2>
				<div
				  id="collapseOne"
				  class="accordion-collapse collapse show"
				  data-bs-parent="#accordionExample"
				>
					<div
					  class="accordion-body"
					>
						<table
						  class="table table-dark table-striped"
						>
							<tbody>
								{% for subarea in subareas %}
									<tr>
										<td>
											<a
											  href="/{{ subtype.lower() }}s/{{ subarea["id"] }}"
											>
												{{ subarea["name"] }}
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		{% endif %}
		<div
		  class="accordion-item"
		>
			<h2
			  class="accordion-header"
			>
				<button
				  class="accordion-button{% if subareas is not none %} collapsed{% endif %}"
				  type="button"
				  data-bs-toggle="collapse"
				  data-bs-target="#collapseTwo"
				  aria-expanded="{{ "true" if subareas is none else "false" }}"
				  aria-controls="collapseTwo"
				>
					Home's Events
					<span
					  class="badge text-bg-primary"
					  style="margin-left: 4px;"
					>
						{{ area["Events"] | length }}
					</span>
				</button>
			</h2>
			<div
			  id="collapseTwo"
			  class="accordion-collapse collapse{% if subareas is none %} show{% endif %}"
			  data-bs-parent="#accordionExample"
			>
				<div
				  class="accordion-body"
				>
					{{ EventList(area["Events"], type, area["id"]) }}
				</div>
			</div>
		</div>
		<div
		  class="accordion-item"
		>
			<h2
			  class="accordion-header"
			>
				<button
				  class="accordion-button collapsed"
				  type="button"
				  data-bs-toggle="collapse"
				  data-bs-target="#collapseThree"
				  aria-expanded="false"
				  aria-controls="collapseThree"
				>
					{{ type.title() }}'s Options
				</button>
			</h2>
			<div
			  id="collapseThree"
			  class="accordion-collapse collapse"
			  data-bs-parent="#accordionExample"
			>
				<div
				  class="accordion-body"
				>
					{{ OptionList(area["Options"]) }}					
				</div>
			</div>
		</div>
	</div>
	{% include("Components/NewEventModal.j2") %}
{% endblock %}
