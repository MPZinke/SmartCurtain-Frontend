{% extends "Header.j2" %}
{% block body %}
	<script src="{{ url_for("static", filename=IDMapping["Header"]["Javascript"]) }}"></script>

	<title>
		Edit Event
	</title>

	<div>
		<form method="POST">
			<div class="input-group mb-3">
				<span class="input-group-text" id="basic-addon1">Event Position</span>

				<div
				  class="input-group-text"
				  style="width: 70%;"
				>
					<input
					  type="range"
					  class="form-range"
					  min="0"
					  max="100"
					  step="1"
					  value="{{ event["percentage"] }}"
					  id="{{ IDMapping["Source"]["values"]["EditAreaEventModalPercentRangeInput"].split("\\\"") }}"
					  name="{{ IDMapping["Source"]["values"]["EditAreaEventModalPercentRangeInput"].split("\\\"") }}"
					  onchange="EditAreaEvent.update_percentage_input(this);"
					>
				</div>
				<input
				  type="number"
				  class="form-control"
				  min="0"
				  max="100"
				  step="1"
				  value="{{ event["percentage"] }}"
				  id="{{ IDMapping["Source"]["values"]["EditAreaEventModalPercentInputInput"].split("\\\"") }}"
				  onchange="EditAreaEvent.update_percentage_range(this);"
				>
			</div>
			<div
			  class="input-group mb-3"
			>
				<span
				  class="input-group-text"
				>
					Select Time
				</span>
				<input
				  id="{{ IDMapping["Source"]["values"]["EditAreaEventModalDatetimeInput"].split("\\\"") }}"
				  name="{{ IDMapping["Source"]["values"]["EditAreaEventModalDatetimeInput"].split("\\\"") }}"
				  value="{{ event["time"] }}"
				  type="datetime-local"
				  aria-label="Date"
				  class="form-control"
				>
			</div>
			<button
			  class="btn btn-primary"
			>
				Update
			</button>
		</form>
	</div>

	<script src="{{ url_for("static", filename=IDMapping["Source"]["Javascript"]) }}"></script>
{% endblock %}
